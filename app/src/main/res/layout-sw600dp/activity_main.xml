<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="@drawable/background"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.example.mahmoud.movies_app.Activities.MainActivity">

    <FrameLayout
        android:id="@+id/movie_main_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.example.mahmoud.movies_app.Fragments.MainFragment"
        android:layout_weight="0.4"/>

    <FrameLayout
        android:id="@+id/movie_details_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.example.mahmoud.movies_app.Fragments.DetailFragment"
        android:layout_weight="0.6"/>
</LinearLayout>
